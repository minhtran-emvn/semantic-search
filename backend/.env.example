# =============================================================================
# Semantic Audio Search - Environment Configuration
# =============================================================================
# Copy this file to .env and adjust values as needed.
# All settings have sensible defaults and are optional.

# -----------------------------------------------------------------------------
# Directory Configuration
# -----------------------------------------------------------------------------
# Directory containing audio files for indexing
# Default: data/audio (relative to backend directory)
AUDIO_DIR=data/audio

# Directory to store generated embeddings
# Default: data/embeddings (relative to backend directory)
EMBEDDINGS_DIR=data/embeddings

# -----------------------------------------------------------------------------
# CLAP Model Configuration
# -----------------------------------------------------------------------------
# Device for CLAP model inference
# Options: 'auto' (default), 'cuda', 'cpu'
# - 'auto': Automatically detect and use GPU if available, otherwise CPU
# - 'cuda': Force GPU usage (will fail if GPU not available)
# - 'cpu': Force CPU usage
CLAP_DEVICE=auto

# Enable CLAP fusion model for variable-length audio
# Default: false
CLAP_ENABLE_FUSION=false

# Optional checkpoint path override for the general CLAP model
# Default: empty (use library default checkpoint)
CLAP_CHECKPOINT_PATH=

# Enable music-specific CLAP model loading
# Default: true
MUSIC_MODEL_ENABLED=true

# Enable content-type reranking for mixed datasets
# Default: true
CONTENT_RERANK_ENABLED=true

# Weight for content-type reranking (0.0-1.0)
# Default: 0.35
CONTENT_RERANK_WEIGHT=0.35

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
# Host address for the API server
# Default: 0.0.0.0 (all interfaces)
API_HOST=0.0.0.0

# Port for the API server
# Default: 8000
API_PORT=8000

# Allowed CORS origins (JSON array string)
# Default: ["http://localhost:3000","http://localhost:8000"]
# Example: ["http://localhost:3000","http://localhost:8000","https://example.com"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# -----------------------------------------------------------------------------
# Translation Configuration
# -----------------------------------------------------------------------------
# Translation provider: google, googletrans, or deepl
TRANSLATION_SERVICE_PROVIDER=googletrans

# Optional API key for paid providers
TRANSLATION_API_KEY=

# Allowed source languages for translation (JSON array string)
# Default: ["vi"]
TRANSLATION_ALLOWED_LANGS=["vi"]

# -----------------------------------------------------------------------------
# Search Configuration
# -----------------------------------------------------------------------------
# Default number of search results to return
# Default: 10
# Must be >= 1
DEFAULT_TOP_K=10

# Maximum number of search results allowed
# Default: 50
# Must be >= 1
MAX_TOP_K=50
